    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' nuxt build",
    "dev": "NODE_ENV=development NODE_OPTIONS='--max-old-space-size=4096' nuxt dev",
    "generate": "NODE_OPTIONS='--max-old-space-size=4096' nuxt generate",
    "generate:ghpages": "NUXT_PUBLIC_BASE_URL=/KOSH/ NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' nuxt generate",
    "postgenerate": "cp -f ./.output/public/index.html ./.output/public/404.html || true",
    "preview": "nuxt preview",
    "serve:static": "npx --yes serve -s ./.output/public -l 5000",
    "generate:local": "NUXT_PUBLIC_BASE_URL=/ NODE_ENV=production NODE_OPTIONS='--max-old-space-size=4096' nuxt generate",
    "serve:local": "npx --yes serve -s ./.output/public -l 5000",
